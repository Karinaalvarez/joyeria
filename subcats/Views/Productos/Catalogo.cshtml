<div class="container mt-4">
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="display-4">
                @(ViewBag.NombreCategoria != null ? ViewBag.NombreCategoria : "Catálogo de Productos")
            </h1>
            @if (ViewBag.CategoriaId != null && ViewBag.CategoriaId > 0)
            {
                <a href="/Productos/Categoria/0" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Ver todos los productos
                </a>
            }
        </div>
        <a href="/Carrito" class="btn btn-outline-primary">
            <i class="bi bi-cart3"></i> Ver Carrito
            <span class="badge bg-danger" id="carrito-count">0</span>
        </a>
    </div>

    <!-- Formulario de búsqueda -->
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <form asp-action="Index" method="get" class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Buscar productos por nombre..." aria-label="Buscar productos" value="@ViewData["CurrentFilter"]">
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            @if (ViewBag.CategoriaId != null && ViewBag.CategoriaId > 0)
            {
                <p>No hay productos disponibles en esta categoría.</p>
            }
            else
            {
                <p>No hay productos disponibles en el catálogo.</p>
            }
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (producto.Imagen != null && producto.Imagen.Length > 0)
                        {
                            <img src="@Url.Action("GetImage", "Productos", new { id = producto.Id_producto })" 
                                 class="card-img-top" 
                                 alt="@producto.Nombre" 
                                 style="height: 180px; object-fit: contain; padding: 10px;">
                        }
                        else
                        {
                            <div class="text-center bg-light p-3" style="height: 180px;">
                                <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                <p class="text-muted">Sin imagen</p>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text">@producto.Descripcion</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary rounded-pill fs-6">L @producto.Precio.ToString("N2")</span>
                                @if (producto.Stock > 0)
                                {
                                    <span class="badge bg-success rounded-pill">Disponible (@producto.Stock)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger rounded-pill">Agotado</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex justify-content-between">
                                <a href="/Productos/Details/@producto.Id_producto" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-info-circle"></i> Ver Detalles
                                </a>
                                @if (producto.Stock > 0)
                                {
                                    <button class="btn btn-sm btn-success agregar-carrito" 
                                            data-id="@producto.Id_producto" 
                                            data-nombre="@producto.Nombre" 
                                            data-precio="@producto.Precio"
                                            data-stock="@producto.Stock">
                                        <i class="bi bi-cart-plus"></i> Agregar al Carrito
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-secondary" disabled>
                                        <i class="bi bi-cart-plus"></i> Sin Stock
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Cargar el carrito desde localStorage
            let carrito = JSON.parse(localStorage.getItem('carrito')) || [];
            actualizarContadorCarrito();
            
            // Agregar evento a los botones de agregar al carrito
            document.querySelectorAll('.agregar-carrito').forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const nombre = this.getAttribute('data-nombre');
                    const precio = parseFloat(this.getAttribute('data-precio'));
                    const stockDisponible = parseInt(this.getAttribute('data-stock'));
                    
                    // Verificar si el producto ya está en el carrito
                    const productoExistente = carrito.find(item => item.id === id);
                    
                    // Calcular la cantidad actual en el carrito (si existe)
                    const cantidadActual = productoExistente ? productoExistente.cantidad : 0;
                    
                    // Verificar si hay suficiente stock
                    if (cantidadActual + 1 > stockDisponible) {
                        // No hay suficiente stock, mostrar mensaje de error
                        mostrarMensaje(`Solo hay ${stockDisponible} unidades disponibles de ${nombre}`, 'warning');
                        return;
                    }
                    
                    if (productoExistente) {
                        productoExistente.cantidad += 1;
                    } else {
                        carrito.push({
                            id: id,
                            nombre: nombre,
                            precio: precio,
                            cantidad: 1,
                            stockDisponible: stockDisponible
                        });
                    }
                    
                    // Guardar en localStorage
                    localStorage.setItem('carrito', JSON.stringify(carrito));
                    
                    // Actualizar contador
                    actualizarContadorCarrito();
                    
                    // Mostrar mensaje
                    mostrarMensaje(`${nombre} agregado al carrito`);
                });
            });
            
            function actualizarContadorCarrito() {
                const contador = document.getElementById('carrito-count');
                const totalItems = carrito.reduce((total, item) => total + item.cantidad, 0);
                contador.textContent = totalItems;
            }
            
            function mostrarMensaje(mensaje, tipo = 'success') {
                const alertDiv = document.createElement('div');
                alertDiv.className = `alert alert-${tipo} alert-dismissible fade show position-fixed bottom-0 end-0 m-3`;
                alertDiv.setAttribute('role', 'alert');
                alertDiv.innerHTML = `
                    <i class="bi bi-${tipo === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i> ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                `;
                document.body.appendChild(alertDiv);
                
                // Auto cerrar después de 3 segundos
                setTimeout(() => {
                    alertDiv.remove();
                }, 3000);
            }
        });
    </script>
    
    <style>
        /* Estilos personalizados para combinar con el color #5A7DC4 */
        .btn-success {
            background-color: #4A7A6C;
            border-color: #4A7A6C;
        }
        
        .btn-success:hover {
