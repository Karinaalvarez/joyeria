<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mikasa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/subcats.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var userId = HttpContextAccessor.HttpContext.Session.GetString("UserId");
        var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
        var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
        var categoriaService = new subcats.customClass.CategoriaService();
        var categorias = role == "Admin" ? new List<subcats.dto.Categoria>() : categoriaService.ObtenerTodasCategorias();
    }
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop"></i> Mikasa
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!string.IsNullOrEmpty(userId))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door"></i> Inicio
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Productos" asp-action="Index">
                                    <i class="bi bi-grid-3x3-gap"></i> Productos
                                </a>
                            </li>
                            
                            @if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Tematicas" asp-action="Index">
                                        <i class="bi bi-palette"></i> Gestionar Temáticas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Categorias" asp-action="Index">
                                        <i class="bi bi-tags"></i> Administrar Categorías
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Proveedores" asp-action="Index">
                                        <i class="bi bi-truck"></i> Proveedores
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                        <i class="bi bi-person-gear"></i> Usuarios
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Reportes" asp-action="Index">
                                        <i class="bi bi-graph-up"></i> Reportes
                                    </a>
                                </li>
                            }
                            else
                            {
                                <!-- Mostrar categorías como pestañas para usuarios normales -->
                                @foreach (var categoria in categorias)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Productos" asp-action="Categoria" asp-route-id="@categoria.Id">
                                            <i class="bi bi-tag"></i> @categoria.Nombre
                                        </a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(userId))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> Hola, @username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Mikasa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <!-- Cargar jQuery desde CDN con fallback a archivo local -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" 
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" 
            crossorigin="anonymous"></script>
    <script>
        // Fallback a jQuery local si CDN falla
        if (typeof jQuery == 'undefined') {
            document.write('<script src="~/lib/jquery/dist/jquery.min.js"><\/script>');
        }
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Modal de Categorías -->
    <div class="modal fade" id="categoriasModal" tabindex="-1" aria-labelledby="categoriasModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="categoriasModalLabel"><i class="bi bi-tags"></i> Categorías</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row" id="categorias-container">
                        <!-- Las categorías se cargarán aquí dinámicamente -->
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Cargar categorías cuando se abre el modal
        document.addEventListener('DOMContentLoaded', function() {
            const categoriasModal = document.getElementById('categoriasModal');
            if (categoriasModal) {
                categoriasModal.addEventListener('show.bs.modal', function() {
                    cargarCategorias();
                });
            }
            
            function cargarCategorias() {
                const categoriasContainer = document.getElementById('categorias-container');
                
                // Hacer una petición AJAX para obtener las categorías
                fetch('/Productos/ObtenerCategorias')
                    .then(response => response.json())
                    .then(categorias => {
                        // Limpiar el contenedor
                        categoriasContainer.innerHTML = '';
                        
                        if (categorias.length === 0) {
                            categoriasContainer.innerHTML = '<div class="col-12 text-center"><p>No hay categorías disponibles</p></div>';
                            return;
                        }
                        
                        // Agregar una opción para ver todas las categorías
                        const divTodas = document.createElement('div');
                        divTodas.className = 'col-md-4 mb-3';
                        divTodas.innerHTML = `
                            <div class="card h-100 categoria-card" data-id="0">
                                <div class="card-body text-center">
                                    <i class="bi bi-grid-3x3-gap-fill fs-1 text-primary"></i>
                                    <h5 class="card-title mt-2">Todos los Productos</h5>
                                </div>
                            </div>
                        `;
                        categoriasContainer.appendChild(divTodas);
                        
                        // Agregar cada categoría
                        categorias.forEach(categoria => {
                            const div = document.createElement('div');
                            div.className = 'col-md-4 mb-3';
                            div.innerHTML = `
                                <div class="card h-100 categoria-card" data-id="${categoria.id}">
                                    <div class="card-body text-center">
                                        <i class="bi bi-tag-fill fs-1 text-primary"></i>
                                        <h5 class="card-title mt-2">${categoria.nombre}</h5>
                                    </div>
                                </div>
                            `;
                            categoriasContainer.appendChild(div);
                        });
                        
                        // Agregar evento click a las tarjetas de categoría
                        document.querySelectorAll('.categoria-card').forEach(card => {
                            card.addEventListener('click', function() {
                                const categoriaId = this.getAttribute('data-id');
                                window.location.href = `/Productos/Categoria/${categoriaId}`;
                            });
                            
                            // Agregar efecto hover
                            card.style.cursor = 'pointer';
                            card.addEventListener('mouseenter', function() {
                                this.classList.add('shadow');
                                this.style.transform = 'translateY(-5px)';
                                this.style.transition = 'transform 0.3s ease, box-shadow 0.3s ease';
                            });
                            card.addEventListener('mouseleave', function() {
                                this.classList.remove('shadow');
                                this.style.transform = 'translateY(0)';
                            });
                        });
                    })
                    .catch(error => {
                        console.error('Error al cargar categorías:', error);
                        categoriasContainer.innerHTML = '<div class="col-12 text-center"><p class="text-danger">Error al cargar las categorías</p></div>';
                    });
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
