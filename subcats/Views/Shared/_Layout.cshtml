<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Joyer칤a</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/subcats.styles.css" asp-append-version="true" />
    <style>
        :root {
            --bs-primary: #5A7DC4;
            --bs-primary-rgb: 90, 125, 196;
            --bs-primary-hover: #4867A6;
            --bs-secondary: #7C97D3;
            --bs-accent: #9DAFD8;
            --bs-dark: #2A3D5B;
        }
        
        .bg-primary {
            background-color: var(--bs-primary) !important;
        }
        
        .btn-primary {
            background-color: var(--bs-primary);
            border-color: var(--bs-primary);
        }
        
        .btn-primary:hover, .btn-primary:focus, .btn-primary:active {
            background-color: var(--bs-primary-hover) !important;
            border-color: var(--bs-primary-hover) !important;
        }
        
        .btn-outline-primary {
            color: var(--bs-primary);
            border-color: var(--bs-primary);
        }
        
        .btn-outline-primary:hover {
            background-color: var(--bs-primary);
            border-color: var(--bs-primary);
            color: white;
        }
        
        .text-primary {
            color: var(--bs-primary) !important;
        }
        
        .border-primary {
            border-color: var(--bs-primary) !important;
        }
        
        .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
            background-color: var(--bs-primary);
        }
        
        a {
            color: var(--bs-primary);
        }
        
        a:hover {
            color: var(--bs-primary-hover);
        }
        
        .dropdown-item:active {
            background-color: var(--bs-primary);
        }
        
        .form-check-input:checked {
            background-color: var(--bs-primary);
            border-color: var(--bs-primary);
        }
    </style>
</head>
@{
    var httpContext = HttpContextAccessor.HttpContext;
    var userId = httpContext?.Session.GetString("UserId");
    var role = httpContext?.Session.GetString("Role") ?? string.Empty;
    var username = httpContext?.Session.GetString("Username");
    var nombreCompleto = httpContext?.Session.GetString("NombreCompleto");
    var categoriaService = new subcats.customClass.CategoriaService();
    var categorias = role == "Admin" ? new List<subcats.dto.Categoria>() : categoriaService.ObtenerTodasCategorias();

    var actualController = ViewContext.RouteData.Values["controller"] as string;
    var actualAction = ViewContext.RouteData.Values["action"] as string;
    bool hideNavbarAndFooter = actualController == "Auth" && (actualAction == "Login" || actualAction == "Register");
}
<body data-user-id="@userId">
    @if (!hideNavbarAndFooter)
    {
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3 py-0">
            <div class="container-fluid">
                <a class="navbar-brand py-1" asp-area="" asp-controller="Home" asp-action="Index">
                    游눑 Joyer칤a
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Navegaci칩n izquierda -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white py-2" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Navegaci칩n central -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white py-2" asp-area="" asp-controller="Productos" asp-action="Index">
                                <i class="bi bi-grid-3x3-gap"></i> Productos
                            </a>
                        </li>
                        
                        @if (role != "Admin")
                        {
                            <!-- Mostrar categor칤as como pesta침as para usuarios normales o visitantes -->
                            @foreach (var categoria in categorias)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white py-2" asp-area="" asp-controller="Productos" asp-action="Categoria" asp-route-id="@categoria.Id">
                                        <i class="bi bi-tag"></i> @categoria.Nombre
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- Opciones solo para administradores -->
                            <li class="nav-item">
                                <a class="nav-link text-white py-2" asp-area="" asp-controller="Tematicas" asp-action="Index">
                                    <i class="bi bi-palette"></i> Gestionar Tem치ticas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white py-2" asp-area="" asp-controller="Categorias" asp-action="Index">
                                    <i class="bi bi-tags"></i> Administrar Categor칤as
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white py-2" asp-area="" asp-controller="Proveedores" asp-action="Index">
                                    <i class="bi bi-truck"></i> Proveedores
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white py-2" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                    <i class="bi bi-person-gear"></i> Usuarios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white py-2" asp-area="" asp-controller="Reportes" asp-action="Index">
                                    <i class="bi bi-graph-up"></i> Reportes
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <!-- Navegaci칩n derecha -->
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(userId))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white py-2" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @nombreCompleto
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Cerrar Sesi칩n</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white py-2" asp-area="" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesi칩n
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Joyer칤a - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    }
    else
    {
        <style>
            body {
                /* Degradado azul oscuro similar a tu ejemplo */
                background: linear-gradient(180deg, #2b3f4f 0%, #1f3444 40%, #162836 100%);
            }
        </style>
        <main role="main" class="min-vh-100 d-flex align-items-center justify-content-center">
            @RenderBody()
        </main>
    }
    <!-- Cargar jQuery desde CDN con fallback a archivo local -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" 
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" 
            crossorigin="anonymous"></script>
    <script>
        // Fallback a jQuery local si CDN falla
        if (typeof jQuery == 'undefined') {
            document.write('<script src="~/lib/jquery/dist/jquery.min.js"><\/script>');
        }
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Modal de Categor칤as -->
    <div class="modal fade" id="categoriasModal" tabindex="-1" aria-labelledby="categoriasModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="categoriasModalLabel"><i class="bi bi-tags"></i> Categor칤as</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row" id="categorias-container">
                        <!-- Las categor칤as se cargar치n aqu칤 din치micamente -->
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Cargar categor칤as cuando se abre el modal
        document.addEventListener('DOMContentLoaded', function() {
            const categoriasModal = document.getElementById('categoriasModal');
            if (categoriasModal) {
                categoriasModal.addEventListener('show.bs.modal', function() {
                    cargarCategorias();
                });
            }
            
            function cargarCategorias() {
                const categoriasContainer = document.getElementById('categorias-container');
                
                // Hacer una petici칩n AJAX para obtener las categor칤as
                fetch('/Productos/ObtenerCategorias')
                    .then(response => response.json())
                    .then(categorias => {
                        // Limpiar el contenedor
                        categoriasContainer.innerHTML = '';
                        
                        if (categorias.length === 0) {
                            categoriasContainer.innerHTML = '<div class="col-12 text-center"><p>No hay categor칤as disponibles</p></div>';
                            return;
                        }
                        
                        // Agregar una opci칩n para ver todas las categor칤as
                        const divTodas = document.createElement('div');
                        divTodas.className = 'col-md-4 mb-3';
                        divTodas.innerHTML = `
                            <div class="card h-100 categoria-card" data-id="0">
                                <div class="card-body text-center">
                                    <i class="bi bi-grid-3x3-gap-fill fs-1 text-primary"></i>
                                    <h5 class="card-title mt-2">Todos los Productos</h5>
                                </div>
                            </div>
                        `;
                        categoriasContainer.appendChild(divTodas);
                        
                        // Agregar cada categor칤a
                        categorias.forEach(categoria => {
                            const div = document.createElement('div');
                            div.className = 'col-md-4 mb-3';
                            div.innerHTML = `
                                <div class="card h-100 categoria-card" data-id="${categoria.id}">
                                    <div class="card-body text-center">
                                        <i class="bi bi-tag-fill fs-1 text-primary"></i>
                                        <h5 class="card-title mt-2">${categoria.nombre}</h5>
                                    </div>
                                </div>
                            `;
                            categoriasContainer.appendChild(div);
                        });
                        
                        // Agregar evento click a las tarjetas de categor칤a
                        document.querySelectorAll('.categoria-card').forEach(card => {
                            card.addEventListener('click', function() {
                                const categoriaId = this.getAttribute('data-id');
                                window.location.href = `/Productos/Categoria/${categoriaId}`;
                            });
                            
                            // Agregar efecto hover
                            card.style.cursor = 'pointer';
                            card.addEventListener('mouseenter', function() {
                                this.classList.add('shadow');
                                this.style.transform = 'translateY(-5px)';
                                this.style.transition = 'transform 0.3s ease, box-shadow 0.3s ease';
                            });
                            card.addEventListener('mouseleave', function() {
                                this.classList.remove('shadow');
                                this.style.transform = 'translateY(0)';
                            });
                        });
                    })
                    .catch(error => {
                        console.error('Error al cargar categor칤as:', error);
                        categoriasContainer.innerHTML = '<div class="col-12 text-center"><p class="text-danger">Error al cargar las categor칤as</p></div>';
                    });
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
