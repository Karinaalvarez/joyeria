@model List<subcats.dto.DetalleOrden>
@{
    ViewData["Title"] = "Detalles de Venta";
    var orden = ViewBag.Orden as subcats.dto.Orden;
    var cliente = ViewBag.Cliente as subcats.dto.Cliente;
}

<div class="container">
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3><i class="bi bi-receipt"></i> Detalles de Venta #@ViewBag.OrdenId</h3>
            <a asp-action="Index" class="btn btn-light">
                <i class="bi bi-arrow-left"></i> Volver a Reportes
            </a>
        </div>
        <div class="card-body">
            @if (orden != null && cliente != null)
            {
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="mb-3">Informacion del Cliente</h5>
                        <p><strong>Nombre:</strong> @cliente.Nombre @cliente.Apellido</p>
                        <p><strong>Email:</strong> @cliente.Email</p>
                        <p><strong>Teluefono:</strong> @cliente.Telefono</p>
                        <p><strong>Direccion:</strong> @cliente.Direccion</p>
                    </div>
                    <div class="col-md-6">
                        <h5 class="mb-3">Informacionn de la Orden</h5>
                        <p><strong>Numero de Orden:</strong> #@orden.Id_orden</p>
                        <p><strong>Fecha:</strong> @orden.Fecha_Orden.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><strong>Estado:</strong> 
                            @if (orden.Estado == "Pendiente")
                            {
                                <span class="badge bg-warning">Pendiente</span>
                            }
                            else if (orden.Estado == "Completada")
                            {
                                <span class="badge bg-success">Completada</span>
                            }
                            else if (orden.Estado == "Cancelada")
                            {
                                <span class="badge bg-danger">Cancelada</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@orden.Estado</span>
                            }
                        </p>
                        <p><strong>Total:</strong> L @orden.Total.ToString("N2")</p>
                    </div>
                </div>
            }

            <h5 class="mb-3">Productos Comprados</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var detalle in Model)
                            {
                                <tr>
                                    <td>@detalle.NombreProducto</td>
                                    <td>@detalle.Cantidad</td>
                                    <td>L @detalle.Precio_Unitario.ToString("N2")</td>
                                    <td>L @detalle.Subtotal.ToString("N2")</td>
                                </tr>
                            }
                            <tr class="table-primary">
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <td><strong>L @orden.Total.ToString("N2")</strong></td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No hay detalles disponibles</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
