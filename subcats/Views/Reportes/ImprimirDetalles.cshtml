@model List<subcats.dto.DetalleOrden>
@{
    Layout = null;
    var orden = ViewBag.Orden as subcats.dto.Orden;
    var cliente = ViewBag.Cliente as subcats.dto.Cliente;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Factura #@ViewBag.OrdenId - Mi Catálogo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .print-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        .print-only {
            display: none;
        }
        @@media print {
            .no-print {
                display: none !important;
            }
            .print-only {
                display: block;
            }
            body {
                margin: 0;
                padding: 15px;
            }
            .container {
                width: 100%;
                max-width: 100%;
                padding: 0;
                margin: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="print-header">
            <div>
                <h2>FACTURA #@ViewBag.OrdenId</h2>
                <h5 class="text-muted">Mi Catálogo - Tienda Online</h5>
            </div>
            <div class="no-print">
                <button class="btn btn-primary me-2" onclick="window.print()">
                    <i class="bi bi-printer"></i> Imprimir
                </button>
                <a href="@Url.Action("Detalles", "Reportes", new { id = ViewBag.OrdenId })" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>

        <div class="print-only text-end mb-3">
            <p>Fecha de impresión: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        </div>

        @if (orden != null && cliente != null)
        {
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="mb-3">Información del Cliente</h5>
                    <p><strong>Nombre:</strong> @cliente.Nombre @cliente.Apellido</p>
                    <p><strong>Email:</strong> @cliente.Email</p>
                    <p><strong>Teléfono:</strong> @cliente.Telefono</p>
                    <p><strong>Dirección:</strong> @cliente.Direccion</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h5 class="mb-3">Información de la Orden</h5>
                    <p><strong>Número de Orden:</strong> #@orden.Id_orden</p>
                    <p><strong>Fecha:</strong> @orden.Fecha_Orden.ToString("dd/MM/yyyy HH:mm")</p>
                    <p>
                        <strong>Estado:</strong>
                        @if (orden.Estado == "Pendiente")
                        {
                            <span class="badge bg-warning">Pendiente</span>
                        }
                        else if (orden.Estado == "Completada")
                        {
                            <span class="badge bg-success">Completada</span>
                        }
                        else if (orden.Estado == "Cancelada")
                        {
                            <span class="badge bg-danger">Cancelada</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@orden.Estado</span>
                        }
                    </p>
                    <p><strong>Total:</strong> L @orden.Total.ToString("N2")</p>
                </div>
            </div>
        }

        <h5 class="mb-3">Productos Comprados</h5>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-end">Precio Unitario</th>
                        <th class="text-end">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var detalle in Model)
                        {
                            <tr>
                                <td>@detalle.NombreProducto</td>
                                <td class="text-center">@detalle.Cantidad</td>
                                <td class="text-end">L @detalle.Precio_Unitario.ToString("N2")</td>
                                <td class="text-end">L @detalle.Subtotal.ToString("N2")</td>
                            </tr>
                        }
                        <tr class="table-primary">
                            <td colspan="3" class="text-end"><strong>Total:</strong></td>
                            <td class="text-end"><strong>L @orden.Total.ToString("N2")</strong></td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No hay detalles disponibles</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4 border-top pt-3">
            <div class="row">
                <div class="col-md-6">
                    <h5>Términos y Condiciones</h5>
                    <p class="small">
                        Este documento es un reporte oficial generado por el sistema de Mi Catálogo.
                        Para cualquier consulta o aclaración, por favor contacte al administrador del sistema.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Documento generado automáticamente</p>
                    <p class="small text-muted">Mi Catálogo - Tienda Online</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Si se abre con el parámetro print=true, imprimir automáticamente
        document.addEventListener('DOMContentLoaded', function() {
            if (window.location.search.includes('print=true')) {
                // Esperar un poco para que se carguen los estilos
                setTimeout(function() {
                    window.print();
                }, 500);
            }
        });
    </script>
</body>
</html>
