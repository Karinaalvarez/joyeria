@model List<subcats.dto.Orden>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reporte de Ventas - Mikasa</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .print-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        .print-only {
            display: none;
        }
        @@media print {
            .no-print {
                display: none !important;
            }
            .print-only {
                display: block;
            }
            body {
                margin: 0;
                padding: 15px;
            }
            .container {
                width: 100%;
                max-width: 100%;
                padding: 0;
                margin: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="print-header">
            <div>
                <h2>REPORTE DE VENTAS</h2>
                <h5 class="text-muted">Mikasa - Tienda Online</h5>
            </div>
            <div class="no-print">
                <button class="btn btn-primary me-2" onclick="window.print()">
                    <i class="bi bi-printer"></i> Imprimir
                </button>
                <a href="@Url.Action("Index", "Reportes", new { searchTerm = ViewBag.SearchTerm })" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>

        <div class="print-only text-end mb-3">
            <p>Fecha de impresiu00f3n: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        </div>

        <!-- Resultados de bu00basqueda -->
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
        {
            <div class="alert alert-info mb-4">
                <i class="bi bi-info-circle"></i> Mostrando resultados para: <strong>"@ViewBag.SearchTerm"</strong>
                <span class="badge bg-primary">@Model.Count resultados</span>
            </div>
        }
        
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var orden in Model)
                        {
                            <tr>
                                <td>@orden.Id_orden</td>
                                <td>@orden.NombreCliente @orden.ApellidoCliente</td>
                                <td>@orden.Fecha_Orden.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end">L @orden.Total.ToString("N2")</td>
                                <td>
                                    @if (orden.Estado == "Pendiente")
                                    {
                                        <span class="badge bg-warning">Pendiente</span>
                                    }
                                    else if (orden.Estado == "Completada")
                                    {
                                        <span class="badge bg-success">Completada</span>
                                    }
                                    else if (orden.Estado == "Cancelada")
                                    {
                                        <span class="badge bg-danger">Cancelada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@orden.Estado</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">
                                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                                {
                                    <div>
                                        <i class="bi bi-search" style="font-size: 2rem;"></i>
                                        <p class="mt-2">No se encontraron ventas para el cliente "@ViewBag.SearchTerm"</p>
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <i class="bi bi-cart-x" style="font-size: 2rem;"></i>
                                        <p class="mt-2">No hay ventas registradas</p>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                @if (Model != null && Model.Any())
                {
                    <tfoot>
                        <tr class="table-primary">
                            <td colspan="3" class="text-end"><strong>Total General:</strong></td>
                            <td class="text-end"><strong>L @Model.Sum(o => o.Total).ToString("N2")</strong></td>
                            <td></td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>

        <div class="mt-4 border-top pt-3">
            <div class="row">
                <div class="col-md-6">
                    <h5>Informaciu00f3n del Reporte</h5>
                    <p class="small">
                        Este documento es un reporte oficial generado por el sistema de Mikasa.
                        Para cualquier consulta o aclaracion, por favor contacte al administrador del sistema.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Documento generado automaticamente</p>
                    <p class="small text-muted">Mikasa - Tienda Online</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Si se abre con el paru00e1metro print=true, imprimir automu00e1ticamente
        document.addEventListener('DOMContentLoaded', function() {
            if (window.location.search.includes('print=true')) {
                // Esperar un poco para que se carguen los estilos
                setTimeout(function() {
                    window.print();
                }, 500);
            }
        });
    </script>
</body>
</html>
