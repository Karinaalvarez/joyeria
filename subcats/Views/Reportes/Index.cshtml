@model List<subcats.dto.Orden>
@{
    ViewData["Title"] = "Reportes de Ventas";
}

<div class="container">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="bi bi-graph-up"></i> Reportes de Ventas</h3>
        </div>
        <div class="card-body">
            <!-- Barra de búsqueda -->
            <div class="row mb-4">
                <div class="col-md-6 offset-md-6">
                    <form asp-action="Index" method="get" class="d-flex">
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Buscar por nombre de cliente..." 
                                   value="@ViewBag.SearchTerm" aria-label="Buscar" aria-describedby="button-search">
                            <button class="btn btn-primary" type="submit" id="button-search">
                                <i class="bi bi-search"></i>
                            </button>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Limpiar
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Resultados de búsqueda -->
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Mostrando resultados para: <strong>"@ViewBag.SearchTerm"</strong>
                    <span class="badge bg-primary">@Model.Count resultados</span>
                </div>
            }
            
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var orden in Model)
                            {
                                <tr>
                                    <td>@orden.Id_orden</td>
                                    <td>@orden.NombreCliente @orden.ApellidoCliente</td>
                                    <td>@orden.Fecha_Orden.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>L @orden.Total.ToString("N2")</td>
                                    <td>
                                        @if (orden.Estado == "Pendiente")
                                        {
                                            <span class="badge bg-warning">Pendiente</span>
                                        }
                                        else if (orden.Estado == "Completada")
                                        {
                                            <span class="badge bg-success">Completada</span>
                                        }
                                        else if (orden.Estado == "Cancelada")
                                        {
                                            <span class="badge bg-danger">Cancelada</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@orden.Estado</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Detalles" asp-route-id="@orden.Id_orden" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Ver Detalles
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                                    {
                                        <div>
                                            <i class="bi bi-search" style="font-size: 2rem;"></i>
                                            <p class="mt-2">No se encontraron ventas para el cliente "@ViewBag.SearchTerm"</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <i class="bi bi-cart-x" style="font-size: 2rem;"></i>
                                            <p class="mt-2">No hay ventas registradas</p>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
