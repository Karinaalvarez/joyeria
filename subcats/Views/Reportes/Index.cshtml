@model List<subcats.dto.Orden>
@{
    ViewData["Title"] = "Reportes de Ventas";
}

<div class="container">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3><i class="bi bi-graph-up"></i> Reportes de Ventas</h3>
            <button class="btn btn-light" onclick="imprimirListado()">
                <i class="bi bi-printer"></i> Imprimir Reporte
            </button>
        </div>
        <div class="card-body">
            <!-- Barra de búsqueda -->
            <div class="row mb-4">
                <div class="col-md-6 offset-md-6">
                    <form asp-action="Index" method="get" class="d-flex">
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Buscar por nombre de cliente..." 
                                   value="@ViewBag.SearchTerm" aria-label="Buscar" aria-describedby="button-search">
                            <button class="btn btn-primary" type="submit" id="button-search">
                                <i class="bi bi-search"></i>
                            </button>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Limpiar
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Resultados de búsqueda -->
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Mostrando resultados para: <strong>"@ViewBag.SearchTerm"</strong>
                    <span class="badge bg-primary">@ViewBag.TotalItems resultados</span>
                </div>
            }
            
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var orden in Model)
                            {
                                <tr>
                                    <td>@orden.Id_orden</td>
                                    <td>@orden.NombreCliente @orden.ApellidoCliente</td>
                                    <td>@orden.Fecha_Orden.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>L @orden.Total.ToString("N2")</td>
                                    <td>
                                        @if (orden.Estado == "Pendiente")
                                        {
                                            <span class="badge bg-warning">Pendiente</span>
                                        }
                                        else if (orden.Estado == "Completada")
                                        {
                                            <span class="badge bg-success">Completada</span>
                                        }
                                        else if (orden.Estado == "Cancelada")
                                        {
                                            <span class="badge bg-danger">Cancelada</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@orden.Estado</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Detalles" asp-route-id="@orden.Id_orden" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Ver Detalles
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                                    {
                                        <div>
                                            <i class="bi bi-search" style="font-size: 2rem;"></i>
                                            <p class="mt-2">No se encontraron ventas para el cliente "@ViewBag.SearchTerm"</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <i class="bi bi-cart-x" style="font-size: 2rem;"></i>
                                            <p class="mt-2">No hay ventas registradas</p>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            @if (ViewBag.TotalPaginas > 1)
            {
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="text-muted">
                        Mostrando @(((ViewBag.PaginaActual - 1) * ViewBag.ItemsPorPagina) + 1) - @(Math.Min(ViewBag.PaginaActual * ViewBag.ItemsPorPagina, ViewBag.TotalItems)) 
                        de @ViewBag.TotalItems resultados
                    </div>
                    <nav aria-label="Navegación de páginas">
                        <ul class="pagination mb-0">
                            <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual - 1, searchTerm = ViewBag.SearchTerm })" aria-label="Anterior">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (int i = Math.Max(1, ViewBag.PaginaActual - 2); i <= Math.Min(ViewBag.TotalPaginas, ViewBag.PaginaActual + 2); i++)
                            {
                                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { pagina = i, searchTerm = ViewBag.SearchTerm })">@i</a>
                                </li>
                            }
                            <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual + 1, searchTerm = ViewBag.SearchTerm })" aria-label="Siguiente">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Función para imprimir el listado completo
        function imprimirListado() {
            // Crear un iframe oculto para cargar la vista de impresión
            const iframe = document.createElement('iframe');
            iframe.style.display = 'none';
            document.body.appendChild(iframe);
            
            // Cargar la vista de impresión en el iframe
            iframe.src = '@Url.Action("ImprimirListado", "Reportes", new { searchTerm = ViewBag.SearchTerm })?print=true';
            
            // Cuando el iframe termine de cargar, imprimir su contenido
            iframe.onload = function() {
                try {
                    iframe.contentWindow.print();
                    
                    // Eliminar el iframe después de un tiempo
                    setTimeout(function() {
                        document.body.removeChild(iframe);
                    }, 1000);
                } catch (e) {
                    console.error('Error al imprimir:', e);
                    window.open('@Url.Action("ImprimirListado", "Reportes", new { searchTerm = ViewBag.SearchTerm })?print=true', '_blank');
                }
            };
        }
        
        // Función para imprimir los detalles de una venta
        function imprimirDetalles(id) {
            // Crear un iframe oculto para cargar la vista de impresión
            const iframe = document.createElement('iframe');
            iframe.style.display = 'none';
            document.body.appendChild(iframe);
            
            // Cargar la vista de impresión en el iframe
            iframe.src = '@Url.Action("GenerarPDF", "Reportes")?id=' + id + '&print=true';
            
            // Cuando el iframe termine de cargar, imprimir su contenido
            iframe.onload = function() {
                try {
                    iframe.contentWindow.print();
                    
                    // Eliminar el iframe después de un tiempo
                    setTimeout(function() {
                        document.body.removeChild(iframe);
                    }, 1000);
                } catch (e) {
                    console.error('Error al imprimir:', e);
                    window.open('@Url.Action("GenerarPDF", "Reportes")?id=' + id + '&print=true', '_blank');
                }
            };
        }
    </script>
}
