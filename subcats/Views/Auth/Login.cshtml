@model subcats.dto.LoginDTO

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #37474f 0%, #546e7a 100%);">
                    <div class="text-center mb-3">
                        <img src="~/imagenes/logos2.png" alt="Logo" class="img-fluid" style="max-height: 100px;">
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <!-- Correo Electrónico -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-secondary">
                                <i class="bi bi-envelope-fill me-1"></i> Correo Electrónico
                            </label>
                            <input asp-for="Username" class="form-control form-control-lg" placeholder="ejemplo@correo.com" style="border-radius: 8px; border: 1px solid #dee2e6;" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>
                        
                        <!-- Contraseña -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-secondary">
                                <i class="bi bi-lock-fill me-1"></i> Contraseña
                            </label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control form-control-lg" id="passwordInput" type="password" placeholder="••••••••" style="border-radius: 8px 0 0 8px; border: 1px solid #dee2e6;" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword" style="border-radius: 0 8px 8px 0; border: 1px solid #dee2e6; border-left: none;">
                                    <i class="bi bi-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-lg text-white fw-bold" style="background: linear-gradient(135deg, #37474f 0%, #546e7a 100%); border-radius: 8px;">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-4">
                        <p class="mb-0 text-muted">¿No tienes cuenta? <a asp-action="Register" class="fw-bold text-decoration-none" style="color: #d4a574;">Regístrate aquí</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #546e7a;
        box-shadow: 0 0 0 0.2rem rgba(84, 110, 122, 0.25);
    }
    
    .btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }
    
    .input-group .btn:hover {
        transform: none;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        });
    </script>
}