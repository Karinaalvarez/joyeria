@model subcats.dto.RegisterDTO

@{
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4" style="background: linear-gradient(135deg, #ff8c42 0%, #ff5733 100%);">
                    <div class="text-center mb-3">
                        <img src="~/imagenes/logo.png" alt="Logo" class="img-fluid" style="max-height: 80px;">
                    </div>
                    <h3 class="mb-0 fw-bold">Crear una cuenta</h3>
                </div>
                <div class="card-body p-4">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" id="floatingUsername" placeholder="Nombre de Usuario" style="border-radius: 10px; border: 1px solid #ced4da;" />
                            <label asp-for="Username" for="floatingUsername">Nombre de Usuario</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" id="floatingPassword" type="password" placeholder="Contraseña" style="border-radius: 10px; border: 1px solid #ced4da;" />
                            <label asp-for="Password" for="floatingPassword">Contraseña</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-4">
                            <input asp-for="ConfirmPassword" class="form-control" id="floatingConfirmPassword" type="password" placeholder="Confirmar Contraseña" style="border-radius: 10px; border: 1px solid #ced4da;" />
                            <label asp-for="ConfirmPassword" for="floatingConfirmPassword">Confirmar Contraseña</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-lg text-white fw-bold" style="background: linear-gradient(135deg, #ff8c42 0%, #ff5733 100%); border-radius: 10px; transition: all 0.3s ease;">
                                Registrarse
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-4">
                        <p class="mb-0">¿Ya tienes una cuenta? <a asp-action="Login" class="fw-bold" style="color: #ff5733; text-decoration: none;">Iniciar Sesión</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
