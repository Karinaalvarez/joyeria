@model subcats.Models.EditarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Editar Usuario</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="control-label">Nombre de Usuario</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="control-label">Contraseña (dejar en blanco para mantener la actual)</label>
                            <input asp-for="Password" class="form-control" type="password" data-val="false" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">Si no deseas cambiar la contraseña, deja este campo en blanco.</small>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Role" class="control-label">Rol</label>
                            <select asp-for="Role" class="form-control">
                                <option value="">Seleccionar Rol</option>
                                <option value="Admin">Administrador</option>
                                <option value="User">Usuario</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Desactivar la validación del campo Password
        $(document).ready(function() {
            $("#Password").rules("remove", "required");
        });
    </script>
}