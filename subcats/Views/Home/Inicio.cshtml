@{
    ViewData["Title"] = "Inicio";
}

<div class="container-fluid p-0">
    <!-- Secci√≥n de Tem√°tica - Imagen a lo ancho de toda la pantalla -->
    @if (ViewBag.TematicaActiva != null)
    {
        <div class="mb-4">
            <img src="@Url.Action("GetImage", "Tematicas", new { id = ViewBag.TematicaActiva.Id })" 
                 alt="Imagen tem√°tica" 
                 class="img-fluid w-100" 
                 style="height: 400px; object-fit: cover;">
        </div>
    }
</div>

<div class="container mt-4">
    <h1 class="display-4 text-center mb-4">Bienvenido a tienda üè† Mikasa</h1>

    <div class="row">
        <div class="col-md-6 mx-auto mb-4">
            <form asp-controller="Productos" asp-action="Index" method="get" class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Buscar productos por nombre..." aria-label="Buscar productos">
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <a href="@Url.Action("Index", "Productos")" class="btn btn-primary btn-lg">
                <i class="bi bi-grid-3x3-gap"></i> Ver todos los productos
            </a>
        </div>
    </div>
</div>
