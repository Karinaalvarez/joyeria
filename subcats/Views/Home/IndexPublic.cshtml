@{
    ViewData["Title"] = "Bienvenido - Joyería";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6 text-center text-lg-start">
                <h1 class="display-3 fw-bold mb-4">Bienvenido a Nuestra Joyería</h1>
                <p class="lead mb-4">Descubre nuestra exclusiva colección de joyas y accesorios de alta calidad.</p>
                <div class="d-grid gap-3 d-md-flex justify-content-md-start">
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                    </a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-primary btn-lg px-5">
                        <i class="bi bi-person-plus me-2"></i> Registrarse
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center mt-5 mt-lg-0">
                <img src="~/imagenes/logos2.png" alt="Joyería Logo" class="img-fluid" style="max-width: 400px;">
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="feature-card p-4">
                    <i class="bi bi-gem fs-1 text-primary mb-3"></i>
                    <h3>Calidad Premium</h3>
                    <p class="text-muted">Productos de la más alta calidad seleccionados cuidadosamente.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card p-4">
                    <i class="bi bi-shield-check fs-1 text-primary mb-3"></i>
                    <h3>Garantía Total</h3>
                    <p class="text-muted">Todos nuestros productos cuentan con garantía completa.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card p-4">
                    <i class="bi bi-truck fs-1 text-primary mb-3"></i>
                    <h3>Envío Seguro</h3>
                    <p class="text-muted">Entrega rápida y segura a todo el país.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .feature-card {
        background: white;
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .btn-outline-primary {
        color: white;
        border-color: white;
    }
    
    .btn-outline-primary:hover {
        background-color: white;
        color: #667eea;
        border-color: white;
    }
</style>
